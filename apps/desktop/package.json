{
  "name": "scenoghetto",
  "version": "1.0.0",
  "description": "Desktop application for Scenoghetto",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc && electron-builder",
    "start": "electron .",
    "test": "tsc && node dist/test.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "ffmpeg-ffprobe-static": "6.1.2-rc.1",
    "fluent-ffmpeg": "^2.1.3",
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@scenoghetto/types": "workspace:*",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.0.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "typescript": "^5.0.0"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/**",
      "node_modules/ffmpeg-ffprobe-static/**"
    ],
    "files": [
      "public/**",
      "dist/**",
      "electron/**",
      "node_modules/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron/icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
